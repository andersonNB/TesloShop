//Los modelos en prisma son como las tablas en la base de datos
generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

enum Size {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

enum Gender {
  men
  women
  kid
  unisex
}

model Category {
  id       String    @id @default(uuid())
  name     String    @unique
  products Product[]

  @@index([name])
}

// De esta manera establecemos la relacion entre Category y Product
model Product {
  id          String         @id @default(uuid())
  description String?
  inStock     Int
  price       Float          @default(0)
  size        Size[]         @default([])
  slug        String         @unique
  tags        String[]       @default([])
  title       String
  gender      Gender
  category    Category       @relation(fields: [categoryId], references: [id])
  categoryId  String
  images      ProductImage[]

  @@index([gender, categoryId])
}

// De esta manera establecemos la relacion entre Product y ProductImage
model ProductImage {
  id  Int    @id @default(autoincrement())
  url String

  product   Product @relation(fields: [productId], references: [id])
  productId String

  @@index([productId])
}
